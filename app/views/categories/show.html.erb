<div class="row mt-3">
  <div class="col-lg-12 category_show">
    <h1 class="mt-4"><span class="badge rounded-pill bg-success"><%= @category.name%> Products</h1>
    <div class="row mt-3">
      <% @products.each do |product| %>
        <div class="card shadow me-2 mb-2" style="width: 15rem; height: 24rem; ">
          <div class="my-auto mx-auto ">
            <% if product.cover_image.attached? %>
              <center><%= image_tag product.cover_image, height:200, width:150 %></center>
            <% end %>
            <div card="card-body">
                <center><strong class="card-title ms-3 mt-3"><%= product.name %></strong></center>
                <center><strong class="badge rounded-pill bg-dark ">Price: <%= product.price %></strong></center>
              <div>
                <center><%= link_to "View Details", category_product_path(product.category_id, product) ,class:"btn btn-outline-success mt-3"%><center>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% if user_signed_in? && current_user.admin?%>
  <div class="row mt-5">
    <div class="col-md-3 ms-auto">
      <%= link_to "create new product", new_category_product_path(@category), class:"btn btn-outline-dark" %>
    </div>
  </div>
<% end %>
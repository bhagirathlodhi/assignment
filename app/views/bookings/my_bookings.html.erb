

<div class="container">
  <div class="row">
    <div class="col-md-16 my-3">
      <h1 class=" mb-4 text-center"><span class="badge rounded-pill bg-dark">CATEGORIES</span></h1>
      <div class="row ms-2">
        <% @bookings.each do |booking| %>
          <div class="card shadow me-1 mt-2" style="width: 17rem; height: 18rem; ">
            <div class="my-auto mb-5 mx-auto">
              <% if booking.product.cover_image.attached? %>
                <center><%= image_tag booking.product.cover_image, class: "card-img-top mt-2", height:170, width:110 %></center>
              <% end %>
              <div card="card-body">
                <div class="text-center mt-1"><h4 class="card-title"><%= link_to booking.product.name, category_product_path(booking.product.category_id, booking.product_id) %></i></h4></div>
                  <center><strong>price:<%= booking.product.price %></strong></center>
                </div>
              </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>